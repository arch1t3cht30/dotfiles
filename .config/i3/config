# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        bindsym Control+h resize shrink width 10 px or 10 ppt
        bindsym Control+j resize grow height 10 px or 10 ppt
        bindsym Control+k resize shrink height 10 px or 10 ppt
        bindsym Control+l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        bindsym Control+Left resize shrink width 10 px or 10 ppt
        bindsym Control+Down resize grow height 10 px or 10 ppt
        bindsym Control+Up resize shrink height 10 px or 10 ppt
        bindsym Control+Right resize grow width 10 px or 10 ppt

        # change focus
        bindsym $mod+h focus left
        bindsym $mod+j focus down
        bindsym $mod+k focus up
        bindsym $mod+l focus right

        bindsym $mod+Left focus left
        bindsym $mod+Down focus down
        bindsym $mod+Up focus up
        bindsym $mod+Right focus right

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

gaps inner 10
gaps outer 0
smart_gaps on
for_window [class="^.*"] border pixel 0
for_window [floating] border normal

set $mode_gaps Gaps: (o) outer, (i) inner, (n) normal mode, (g) gap mode
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym n [class="^.*"] border normal; gaps outer all set 0; gaps inner all set 0
        bindsym g [class="^.*"] border pixel 0; [floating] border normal; gaps outer all set 0; gaps inner all set 10

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus                gaps inner current plus 5
        bindsym minus               gaps inner current minus 5
        bindsym Control+plus        gaps inner current plus 1
        bindsym Control+minus       gaps inner current minus 1
        bindsym 0                   gaps inner current set 0

        bindsym Shift+plus          gaps inner all plus 5
        bindsym Shift+minus         gaps inner all minus 5
        bindsym Shift+Control+plus  gaps inner all plus 1
        bindsym Shift+Control+minus gaps inner all minus 1
        bindsym Shift+0             gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus                gaps outer current plus 5
        bindsym minus               gaps outer current minus 5
        bindsym Control+plus        gaps outer current plus 1
        bindsym Control+minus       gaps outer current minus 1
        bindsym 0                   gaps outer current set 0

        bindsym Shift+plus          gaps outer all plus 5
        bindsym Shift+minus         gaps outer all minus 5
        bindsym Shift+Control+plus  gaps outer all plus 1
        bindsym Shift+Control+minus gaps outer all minus 1
        bindsym Shift+0             gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

